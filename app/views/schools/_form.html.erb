<div class='center container'>
	<%= form_for @school do |f| %>

		<%= f.label :name, class:'form-text' %>
		<%= f.text_field :name %>

		<%= f.label :mascot, class:'form-text' %>
		<%= f.text_field :mascot %>

		<%= f.label :year, class:'form-text' %>
		<%= f.number_field :year %>

		<%= f.submit nil, class:'btn submit-school-btn green' %>

		<%= link_to 'Cancel', :back, class:'btn cancel-school-btn black' %>

	<% end %>
</div>