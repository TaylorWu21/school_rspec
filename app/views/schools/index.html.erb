<h1>Schoolio</h1>

<% if @schools.any? %>
  <div class='row'>
    <% @schools.each do |school| %>
      <div class="col s12 m6">
       <div class="card white">
         <div class="card-content">
           <span class="card-title"><%= school.name %></span>
         </div>
         <div class="card-action">
           <%= link_to 'Check Out School', school_path(school), class: 'btn' %>
         </div>
       </div>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>No schools, please add one.</h3>
<% end %>

<%= link_to 'New School', new_school_path, class:'btn' %> 